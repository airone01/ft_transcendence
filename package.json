{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "transc",
  "version": "0.1.0",
  "private": true,
  "packageManager": "^bun@1.3.6",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "$(./biome.sh) check .",
    "format": "$(./biome.sh) check . --fix",
    "db:push": "bun run --cwd packages/db db:push"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "turbo": "^2.7"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "pg": "^8.18.0"
  }
}
